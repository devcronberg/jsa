// npm install -g eslint
// Install eslint extension
{
    "root": true,
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "script"
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": "error",
        "strict": ["warn","function"],
        "quotes": [
            "warn",
            "double"
        ],
        "eqeqeq": "warn",
        "semi": "warn"
    },    
    "globals": {
        "S": true,
        "jQuery": true,
        "$": true
    }
}    
